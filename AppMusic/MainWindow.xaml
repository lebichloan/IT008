<Window x:Class="AppMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppMusic"
        xmlns:uc="clr-namespace:AppMusic.UserControls"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Height="700" Width="1100">
    <Border CornerRadius="0" Background="White" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>
            
            <!--Menu-->
            <Border Background="White" CornerRadius="40 0 0 40" Grid.RowSpan="2">
                <StackPanel Margin="0 30 0 0">
                    <!--Ellipses-->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="63 10 0 10">
                        <Ellipse Fill="#ff6258" Width="10" Height="10"/>
                        <Ellipse Fill="#ffbf2f" Width="10" Height="10" Margin="7 0"/>
                        <Ellipse Fill="#2acb43" Width="10" Height="10"/>
                    </StackPanel>

                    <TextBlock Text="LIBRARY" Style="{StaticResource menuTitle}"/>
                    
                    <Button Style="{StaticResource menuButton}"
                            Background="#02be68" Foreground="White">
                        <Grid>
                            <TextBlock Text="Home" Margin="0 0 0 2"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" Visibility="Visible"/>
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Text="Playlists" Margin="0 0 0 2"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}"/>
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Text="Artists" Margin="0 0 0 2"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}"/>
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Text="Albums" Margin="0 0 0 2"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}"/>
                        </Grid>
                    </Button>
                    
                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Text="Songs" Margin="0 0 0 2"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}"/>
                        </Grid>
                    </Button>

                    <TextBlock Text="DISCOVER" Style="{StaticResource menuTitle}"/>

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Text="Radio" Margin="0 0 0 2"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}"/>
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Text="For you" Margin="0 0 0 2"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Border>
            
            <!--Music Section-->
            <StackPanel Grid.Column="1" Background="White" Margin="40 60 10 0">
                <TextBlock Text="Home" Style="{StaticResource titleText}"/>

                <Border CornerRadius="20" Margin="0 20 0 0">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="#30ad9a" Offset="0"/>
                            <GradientStop Color="#18c274" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#1fae7e"/>
                    </Border.Effect>

                    <Grid>
                        
                        <Border Opacity="0.3" CornerRadius="20">
                            <Border.Background>
                                <ImageBrush ImageSource="/Images/Artist/Double2T.png"/>
                            </Border.Background>
                        </Border>
                        
                        <!--Music list-->
                        <StackPanel Margin="30">
                            <TextBlock Text="Daily Singer" Foreground="White"
                                       FontSize="26" FontWeight="Bold"/>
                            <TextBlock Text="Double2T" Foreground="#c0e6de"
                                       FontSize="18" FontWeight="SemiBold"/>

                            <uc:SongItem Number="1" Title="À Lôi" Time="3:56"/>
                            <uc:SongItem Number="2" Title="Thanh Âm Miền Núi" Time="4:02"/>
                            <uc:SongItem Number="3" Title="Bad Girl" Time="3:29"/>
                            <uc:SongItem Number="4" Title="Người Miền Núi Chất" Time="4:32"/>
                            <uc:SongItem Number="5" Title="Chài Diếp Noọng" Time="5:11"/>
                            <uc:SongItem Number="6" Title="Tay-Lai PrO" Time="3:47"/>
                            <uc:SongItem Number="7" Title="Kéo em về làm vợ" Time="4:23"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!--Right section-->
            <Border Grid.Column="2" CornerRadius="0 40 0 0" Background="White" Margin="0 22 0 0">
                <StackPanel Margin="30 50 30 0">
                    <!--Popular-->
                    <TextBlock Text="Popular" Style="{StaticResource titleText}" Margin="0 0 0 10" FontSize="28"/>
                    <uc:PopularSong Title="À Lôi" Time="3:56" Image="/Images/Song/ALoi.jpg" IsActive="True"/>
                    <uc:PopularSong Title="We Don't Talk Anymore" Time="4:05" Image="/Images/Song/WDTA.jpg"/>
                    <uc:PopularSong Title="Chúng Ta Của Hiện Tại" Time="6:18" Image="/Images/Artist/SonTungMTP.jpg"/>
                    <uc:PopularSong Title="Chài Điếp Noọng" Time="5:11" Image="/Images/Song/ChaiDiepNoong.jpg"/>
                    
                    <!--Playlists-->
                    <TextBlock Text="Playlists" Style="{StaticResource titleText}" Margin="0 30 0 20" FontSize="24"/>
                    <StackPanel Orientation="Horizontal">
                        <uc:Playlists Title="Best of" Desc="CharliePuth" Image="/Images/Artist/CharliePuth.jpg"/>
                        <uc:Playlists Title="Rap Việt" Desc="Double2T" Image="/Images/Artist/Double2T.png" Margin="4 0 0 0"/>
                    </StackPanel>
           
                </StackPanel>
            </Border>

            <!--Player-->
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                    >
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#18c274" Offset="0"/>
                        <GradientStop Color="#30ad9a" Offset="0.4"/>
                        <GradientStop Color="#30ad9a" Offset="0.6"/>
                        <GradientStop Color="#18c274" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">

                        <Ellipse Width="50" Height="50" Margin="30 0 0 0">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Images/Song/ALoi.jpg"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <StackPanel VerticalAlignment="Center" Margin="20 0 30 0">
                            <TextBlock Text="À Lôi" Foreground="White" FontSize="22" FontWeight="Bold"/>
                            <TextBlock Text="Double2T" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Column="1" HorizontalAlignment="Center">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="45"/>
                            </Grid.RowDefinitions>

                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource playerButton}">
                                        <Icon:PackIconMaterial Kind="SkipPrevious" Style="{StaticResource playerButtonIcon}"/>
                                    </Button>

                                    <Button Style="{StaticResource playerButton}">
                                        <Icon:PackIconMaterial Kind="Pause" Style="{StaticResource playerButtonIcon}"/>
                                    </Button>

                                    <Button Style="{StaticResource playerButton}">
                                        <Icon:PackIconMaterial Kind="SkipNext" Style="{StaticResource playerButtonIcon}"/>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            

                            <Slider Grid.Row="1" HorizontalAlignment="Center"
                                    Style="{DynamicResource SliderMusic}" x:Name="sliderPlayer"
                                    Width="300" VerticalAlignment="Center"
                                    SelectionEnd="{Binding ElementName=sliderPlayer,Path=Value}">
                            </Slider>
                        </Grid>
                        
                        
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" Grid.Column="2" FlowDirection="LeftToRight" HorizontalAlignment="Right">
                        <Button Style="{StaticResource playerButton}" HorizontalAlignment="Right">
                            <Icon:PackIconMaterial Kind="VolumeMedium" Style="{StaticResource playerButtonIcon}"/>
                        </Button>

                        <Slider Style="{DynamicResource SliderVolume}" x:Name="slider" IsSelectionRangeEnabled="True" 
                                HorizontalAlignment="Right"
                                Margin="0 0 20 0"
                                VerticalAlignment="Center" Value="5" Width="125"
                                SelectionEnd="{Binding ElementName=slider,Path=Value}"/>
                    </StackPanel>
                </Grid>
                
                
            </Border>
        </Grid>
    </Border>
</Window>
